= render "items/header"

.l-container.clearfix
  .l-content
    %h2.l-chapter-credithead クレジットカード情報入力
    %form#add-card-form.l-single-inner
      .l-single-content
        .form-group
          %label カード番号
          %span.form-require 必須
          %input#payment_card_no.input-default{"data-input-type" => "card", :maxlength => "19", :placeholder => "半角数字のみ", :type => "text", :value => ""}/
          %ul.signup-card-list
            %li
              = image_tag("credit_logo/visa_logo.svg",class:'visalogo')
            %li
              = image_tag("credit_logo/master-card.svg",class:'masterlogo')
            %li
              = image_tag("credit_logo/saison-card.svg",class:'saisonlogo')
            %li
              = image_tag("credit_logo/jcb.svg",class:'jcblogo')
            %li
              = image_tag("credit_logo/american_express.svg",class:'americanlogo')
            %li
              = image_tag("credit_logo/dinersclub.svg",class:'dinersclublogo')
            %li
              = image_tag("credit_logo/discover.svg",class:'discoverlogo')
        .form-group.signup-form-expire
          %label{:for => "payment_card_expire"} 有効期限
          %span.form-require 必須
          %br/
          .select-wrap1
            %select#payment_card_expire_mm.select-default
              %option{:value => "01"} 01
              %option{:value => "02"} 02
              %option{:value => "03"} 03
              %option{:value => "04"} 04
              %option{:value => "05"} 05
              %option{:value => "06"} 06
              %option{:value => "07"} 07
              %option{:value => "08"} 08
              %option{:value => "09"} 09
              %option{:value => "10"} 10
              %option{:value => "11"} 11
              %option{:value => "12"} 12
            %i.icon-arrow-bottom
          %span.monthyear 月
          %ul#expire-mm-error-wrapper.has-error-text
          .select-wrap1
            %select#payment_card_expire_yy.select-default
              %option{:value => "19"} 19
              %option{:value => "20"} 20
              %option{:value => "21"} 21
              %option{:value => "22"} 22
              %option{:value => "23"} 23
              %option{:value => "24"} 24
              %option{:value => "25"} 25
              %option{:value => "26"} 26
              %option{:value => "27"} 27
              %option{:value => "28"} 28
              %option{:value => "29"} 29
            %i.icon-arrow-bottom
          %span.monthyear 年
        .form-group
          %label セキュリティコード
          %span.form-require 必須
          %input#payment_card_security_code.input-default{:placeholder => "カード背面4桁もしくは3桁の番号", :type => "number", :value => ""}/
          %ul#security-code-error-wrapper.has-error-text
          .signup-seqcode
            .signup-seqcode-text
              %span.form-question> ?
              カード裏面の番号とは？
        %button#submit-button.btn-default.btn-red{:type => "button"} 追加する
  = render "l-side"
= render "items/footer"
